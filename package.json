{
  "name": "pw-pomish-starter",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "install:playwright": "npx playwright install --with-deps",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:e2e": "playwright test tests/e2e",
    "test:api": "playwright test tests/api",
    "test:visual": "playwright test tests/visual",
    "show-report": "playwright show-report",
    "show-ortoni-report": "ortoni-report show-report",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "codegen": "playwright codegen https://automationintesting.online/",
    "test:chromium": "playwright test --project=rbp-chromium",
    "test:edge": "playwright test --project=rbp-edge",
    "test:webkit": "playwright test --project=rbp-webkit",
    "test:mobile": "playwright test --project=rbp-mobile-chrome --project=rbp-mobile-safari",
    "test:all": "playwright test",
    "test:allure": "cross-env REPORTER_TYPE=allure playwright test",
    "test:ortoni": "cross-env REPORTER_TYPE=ortoni playwright test",
    "test:steps": "cross-env REPORTER_TYPE=steps playwright test",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:clean": "rimraf allure-results allure-report",
    "steps:open": "start steps-report/summary.html",
    "steps:clean": "rimraf steps-report"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@playwright/test": "^1.48.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "cross-env": "^10.1.0",
    "ejs": "^3.1.10",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^4.0.0",
    "ortoni-report": "^4.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
